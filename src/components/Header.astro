---
import ChevronLeft from "../icons/chevron-left.astro";
import Logo from "../icons/logo.astro";

export interface Props {
  backLink: string;
}

const { backLink } = Astro.props;
---

<div class="flex flex-row items-center justify-between gap-4">
  <a
    href={backLink}
    class="group/link outline-on-primary -ml-4 flex flex-row items-center gap-4 rounded-lg px-4 outline-offset-4"
  >
    <ChevronLeft
      aria-hidden="true"
      class="size-8 translate-x-1 stroke-2 transition-transform duration-200 group-hover/link:translate-x-0 group-focus/link:translate-x-0"
    />
    <slot name="back-link" />
  </a>
  <a
    href="/"
    aria-label="Main page"
    title="Main page"
    class="group/logo text-on-background outline-on-primary rounded-lg outline-offset-4"
    ><Logo
      class="isolate duration-300 group-hover/logo:-translate-y-0.5 group-focus/logo:-translate-y-0.5"
    /></a
  >
</div>
