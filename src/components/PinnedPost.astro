---
import type { CollectionEntry } from "astro:content";
import ArrowUpRight from "../icons/arrow-up-right.astro";
import { Image } from "astro:assets";

export type Props = {
  post: CollectionEntry<"feed">;
};
const { post } = Astro.props;
---

<a
  href={`/feed/${post.slug}`}
  class="group/post flex min-h-0 cursor-pointer flex-col-reverse items-center gap-4 outline-hidden sm:flex-row sm:gap-8 lg:-mx-24"
>
  <div
    class="aspect-video min-h-0 w-full min-w-0 flex-1 overflow-hidden rounded-2xl sm:aspect-square sm:max-w-sm"
  >
    {
      post.data.poster ? (
        <Image
          src={post.data.poster}
          title={post.data.posterAlt}
          alt={post.data.posterAlt!}
          class="md:animate-scale-in md:(--scale:1.05) h-full rounded-2xl object-cover transition-shadow duration-300 group-hover/post:ring-4 group-focus/post:ring-4"
        />
      ) : null
    }
  </div>
  <div class="relative flex h-full flex-1 flex-col gap-4">
    <h3
      class="bg-primary inline-block text-2xl font-semibold group-hover/post:underline group-focus/post:underline sm:text-3xl"
    >
      <ArrowUpRight
        aria-hidden="true"
        class="float-right m-2 size-10 self-end justify-self-end stroke-2 sm:hidden"
      />
      {post.data.title}
    </h3>
    <p class="bg-primary hidden sm:block">{post.data.summary}</p>
    <ArrowUpRight
      aria-hidden="true"
      class="animate-arrow float-right m-4 mt-10 hidden size-16 self-end justify-self-end sm:inline-block"
    />
  </div>
</a>
